<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <actionList>
    <action>
    <name>GetListOfApps</name>
      <argumentList>
        <argument>
          <name>ListOfApps</name>
          <direction>out</direction>
          <relatedStateVariable>ListApps</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetInfoOfApp</name>
      <argumentList>
      <argument>
        <name>SelectedApp</name>
        <direction>in</direction>
        <relatedStateVariable>AppSelector</relatedStateVariable>
      </argument>
        <argument>
          <name>InfoOfApp</name>
          <direction>out</direction>
          <relatedStateVariable>AppInfo</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetApp</name>
      <argumentList>
      <argument>
        <name>TheApp</name>
        <direction>out</direction>
        <relatedStateVariable>App</relatedStateVariable>
      </argument>
      </argumentList>
    </action>
  </actionList>
  <serviceStateTable>
  <stateVariable sendEvents="yes" multicast="yes">
    <name>ListApps</name>
    <dataType>string</dataType>
    <defaultValue>Default</defaultValue>
  </stateVariable>
  <stateVariable sendEvents="yes">
    <name>AppInfo</name>
    <dataType>string</dataType>
    <defaultValue>Default</defaultValue>
  </stateVariable>
  <stateVariable sendEvents="yes">
    <name>App</name>
    <dataType>string</dataType>
    <defaultValue>Default</defaultValue>
  </stateVariable>
  <stateVariable sendEvents="no">
    <name>AppSelector</name>
    <dataType>string</dataType>
    <defaultValue>Default</defaultValue>
  </stateVariable>
  </serviceStateTable>
</scpd>
