<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <actionList>
    <action>
    <name>search</name>
      <argumentList>
        <argument>
          <name>newName</name>
          <direction>in</direction>
	  <relatedStateVariable>name</relatedStateVariable>
        </argument>
	<argument>
          <name>newPhone</name>
          <direction>out</direction>
	  <relatedStateVariable>phone</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
  <serviceStateTable>
    <stateVariable sendEvents="yes">
      <name>name</name>
      <dataType>string</dataType>
    </stateVariable>
    <stateVariable sendEvents="yes">
      <name>phone</name>
      <dataType>string</dataType>
    </stateVariable>
  </serviceStateTable>	
</scpd>
