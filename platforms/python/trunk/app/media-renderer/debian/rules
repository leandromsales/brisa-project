#!/usr/bin/make -f

PYVER=2.5
PYTHON=python$(PYVER)

p_base=$(PYTHON)-brisa
d_base=debian/tmp
package=brisa_media_renderer

build: build-stamp

build-stamp:
	dh_testdir
	$(PYTHON) setup.py build
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	$(PYTHON) setup.py clean
	-rm -f build-stamp
	-rm -rf build
	-rm -f *.py[co]
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k

	$(PYTHON) setup.py install --root=$(d_base)

	# Bin
	mkdir -p debian/$(p_base)-media-renderer/usr/bin
	sed s/"#\!\/usr\/bin\/env python"/"#\!\/usr\/bin\/env python2.5"/ debian/tmp/usr/bin/brisa-media-renderer > debian/tmp/usr/bin/brisa-media-renderer2.5
	chmod +x debian/tmp/usr/bin/brisa-media-renderer2.5
	mv debian/tmp/usr/bin/brisa-media-renderer2.5 debian/$(p_base)-media-renderer/usr/bin/brisa-media-renderer

	# Share
	mkdir -p debian/$(p_base)-media-renderer/usr/share
	mv debian/tmp/usr/share/* debian/$(p_base)-media-renderer/usr/share

	# Libs
	mkdir -p debian/$(p_base)-media-renderer/usr/lib/$(PYTHON)/site-packages/$(package)
	mv debian/tmp/usr/lib/$(PYTHON)/site-packages/$(package)/* debian/$(p_base)-media-renderer/usr/lib/$(PYTHON)/site-packages/$(package)

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_fixperms
	dh_python
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch

.PHONY: build install clean binary binary-indep binary-arch
