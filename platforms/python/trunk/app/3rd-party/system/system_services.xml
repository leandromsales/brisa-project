<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
    <stateVariable sendEvents="yes">
      <name>LastResult</name>
      <dataType>string</dataType>
      <defaultValue>0</defaultValue>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
    <name>GetBatteryStatus</name>
      <argumentList>
        <argument>
          <name>Level</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetTemperature</name>
      <argumentList>
        <argument>
          <name>Temperature</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetMemoryUsage</name>
      <argumentList>
        <argument>
          <name>Used</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
        <argument>
          <name>Free</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetCPUInfo</name>
      <argumentList>
        <argument>
          <name>Load</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
    <name>GetIP</name>
      <argumentList>
        <argument>
          <name>Interface</name>
          <direction>in</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
        <argument>
          <name>IP</name>
          <direction>out</direction>
          <relatedStateVariable>LastResult</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
</scpd>
